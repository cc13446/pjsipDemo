<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3">
    <TableRow>

        <EditText
            android:id="@+id/tel_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@android:string/emptyPhoneNumber"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:focusable="false"
            android:textSize="36sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tabr1"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3"
            android:textSize="36sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tabr2"
        android:gravity="center">
        <Button
            android:id="@+id/button4"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_5"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_6"
            android:textSize="36sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tabr3"
        android:gravity="center">
        <Button
            android:id="@+id/button7"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_7"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_8"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_9"
            android:textSize="36sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tabr4"
        android:gravity="center">
        <Button
            android:id="@+id/buttonX"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/X"
            android:textSize="36sp" />

        <Button
            android:id="@+id/button0"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/buttonJ"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/J"
            android:textSize="36sp" />
    </TableRow>
    <TableRow
        android:id="@+id/tabr5"
        android:gravity="center">

        <ImageButton
            android:id="@+id/add_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_contact"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/phone_call_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_phone_call"
            android:scaleType="fitCenter" />
        <ImageButton
            android:id="@+id/video_call_buttonn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_video_call"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_backspace"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_backspace" />
    </TableRow>
</TableLayout>
